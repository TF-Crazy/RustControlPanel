<!-- FpsChart.xaml - Compact FPS chart with neon style                   -->
<!-- ════════════════════════════════════════════════════════════════════ -->

<UserControl x:Class="RustControlPanel.Views.Controls.FpsChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             Height="60"
             Width="350">
    
    <Border BorderBrush="{StaticResource BorderNormalBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource BackgroundDarkBrush}">
        <Canvas x:Name="ChartCanvas" Margin="2"/>
    </Border>
    
</UserControl>
