<Window x:Class="RustControlPanel.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:components="clr-namespace:RustControlPanel.Views.Components"
        mc:Ignorable="d"
        Title="Rust Control Panel" Height="700" Width="1100"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Border Background="{StaticResource BackgroundDark}" 
            CornerRadius="12" 
            BorderBrush="#252525" 
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="28"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                    <Image Source="/Resources/app.ico" Width="16" Height="16" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="RUST CONTROL PANEL" 
                               Foreground="#666" 
                               FontSize="10" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0">
                    <Button Content="" FontFamily="Segoe MDL2 Assets" 
                            Click="Minimize_Click" 
                            Style="{StaticResource WindowControlButtonStyle}"
                            ToolTip="Réduire"/>
                    <Button Content="" FontFamily="Segoe MDL2 Assets" 
                            Click="Close_Click" 
                            Style="{StaticResource WindowCloseButtonStyle}"
                            ToolTip="Fermer"/>
                </StackPanel>
            </Grid>

            <components:ServerBar Grid.Row="1"/>

            <Grid Grid.Row="2">
                <TabControl Background="Transparent" 
                            BorderThickness="0,1,0,0" 
                            BorderBrush="{StaticResource BorderBrush}"
                            Padding="0">
                    <TabItem Header="CONSOLE">
                        <Grid Background="#0F0F0F">
                            <TextBlock Text="Flux Console en attente..." Foreground="#333" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="JOUEURS">
                        <Grid Background="#0F0F0F">
                            <TextBlock Text="Liste des joueurs" Foreground="#333" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="MAP">
                        <Grid Background="#0F0F0F">
                            <TextBlock Text="Visualiseur de Map" Foreground="#333" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </TabItem>
                </TabControl>

                <components:DebugPanelView x:Name="DebugPanel" 
                                           HorizontalAlignment="Right" 
                                           Width="400" 
                                           Visibility="Collapsed" />
            </Grid>

            <Border Grid.Row="3" 
                    Background="{StaticResource SecondaryDark}" 
                    BorderThickness="0,1,0,0" 
                    BorderBrush="{StaticResource BorderBrush}"
                    CornerRadius="0,0,12,12">
                <Grid Margin="15,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="8" Height="8" Margin="0,0,8,0">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="#444"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ConnectionStatus}" Value="Connecté">
                                            <Setter Property="Fill" Value="#4CAF50"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ConnectionStatus}" Value="Connexion...">
                                            <Setter Property="Fill" Value="Orange"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="{Binding ConnectionStatus}" 
                                   Foreground="{StaticResource TextDim}" 
                                   FontSize="11" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock HorizontalAlignment="Right" 
                               VerticalAlignment="Center" 
                               Text="RUST CONTROL PANEL - V1.0" 
                               Foreground="#222" 
                               FontSize="10" 
                               FontWeight="Bold"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>