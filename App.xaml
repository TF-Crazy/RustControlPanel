<!-- App.xaml - Application resources and merged dictionaries            -->
<!-- ════════════════════════════════════════════════════════════════════ -->

<Application x:Class="RustControlPanel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/Windows/LoginWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <!-- Colors -->
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                
                <!-- Brushes -->
                <ResourceDictionary Source="Styles/Brushes.xaml"/>
                
                <!-- Typography -->
                <ResourceDictionary Source="Styles/Typography.xaml"/>
                
                <!-- Controls -->
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Styles/TextBoxes.xaml"/>
                <ResourceDictionary Source="Styles/Panels.xaml"/>
                <ResourceDictionary Source="Styles/ScrollBars.xaml"/>
                <ResourceDictionary Source="Styles/TabControls.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" 
                                            xmlns:converters="clr-namespace:RustControlPanel.Converters"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" 
                                                 xmlns:converters="clr-namespace:RustControlPanel.Converters"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" 
                                                        xmlns:converters="clr-namespace:RustControlPanel.Converters"/>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
