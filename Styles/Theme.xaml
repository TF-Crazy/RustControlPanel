<!-- ════════════════════════════════════════════════════════════════════ -->
<!-- Theme.xaml - Compact Cyan Theme (Tailles fixes)                     -->
<!-- ════════════════════════════════════════════════════════════════════ -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- COLORS                                                             -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Color x:Key="BaseBlack">#0D1117</Color>
    <Color x:Key="BaseDark">#161B22</Color>
    <Color x:Key="BaseCard">#1C2128</Color>
    <Color x:Key="Cyan">#00D9FF</Color>
    <Color x:Key="CyanDark">#00B8D4</Color>
    <Color x:Key="Green">#10B981</Color>
    <Color x:Key="Orange">#FF6B35</Color>
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- BACKGROUNDS                                                        -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="ThemeBackground" Color="{StaticResource BaseBlack}"/>
    
    <LinearGradientBrush x:Key="ThemeTitleBar" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1A1F26" Offset="0"/>
        <GradientStop Color="#161B22" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="ThemeTopBar" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1F252E" Offset="0"/>
        <GradientStop Color="#1C2128" Offset="0.5"/>
        <GradientStop Color="#181D24" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Cards with inset effect -->
    <LinearGradientBrush x:Key="ThemeCard" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#151A20" Offset="0"/>
        <GradientStop Color="#1C2128" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="ThemeCardHover" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1A2028" Offset="0"/>
        <GradientStop Color="#212830" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- BORDERS                                                            -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="ThemeCardBorder" Color="#2A3038"/>
    <SolidColorBrush x:Key="ThemeBorderAccent" Color="{StaticResource Cyan}"/>
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- ACCENTS                                                            -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="ThemeAccent" Color="{StaticResource Cyan}"/>
    <SolidColorBrush x:Key="ThemeAccentSuccess" Color="{StaticResource Green}"/>
    <SolidColorBrush x:Key="ThemeAccentWarning" Color="{StaticResource Orange}"/>
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- TEXT                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="ThemeText" Color="#E6EDF3"/>
    <SolidColorBrush x:Key="ThemeTextSecondary" Color="#B1BAC4"/>
    <SolidColorBrush x:Key="ThemeTextMuted" Color="#7D8590"/>
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- EFFECTS (shadows pour effet incrusté)                              -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <!-- Outer shadow (dark, below) -->
    <DropShadowEffect x:Key="CardShadowOuter" 
                      Color="#000000" 
                      BlurRadius="8" 
                      ShadowDepth="2" 
                      Opacity="0.6"
                      Direction="315"/>
    
    <!-- Inner shadow (for inset effect) -->
    <DropShadowEffect x:Key="CardShadowInner" 
                      Color="#000000" 
                      BlurRadius="4" 
                      ShadowDepth="1" 
                      Opacity="0.3"
                      Direction="135"/>
    
    <!-- Cyan glow -->
    <DropShadowEffect x:Key="GlassGlow" 
                      Color="{StaticResource Cyan}" 
                      BlurRadius="16" 
                      ShadowDepth="0" 
                      Opacity="0.6"/>
    
    <!-- Success glow -->
    <DropShadowEffect x:Key="SuccessGlow" 
                      Color="{StaticResource Green}" 
                      BlurRadius="12" 
                      ShadowDepth="0" 
                      Opacity="0.5"/>

</ResourceDictionary>
