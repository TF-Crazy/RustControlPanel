<!-- Theme.Neumorphism.xaml - Soft neumorphism dark theme                -->
<!-- ════════════════════════════════════════════════════════════════════ -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Neumorphism Colors -->
    <Color x:Key="NeuBase">#1C1C1E</Color>
    <Color x:Key="NeuLight">#2C2C2E</Color>
    <Color x:Key="NeuAccent">#6366F1</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="ThemeBackground" Color="{StaticResource NeuBase}"/>
    <SolidColorBrush x:Key="ThemeTitleBar" Color="#252527"/>
    <SolidColorBrush x:Key="ThemeTopBar" Color="#1C1C1E"/>
    
    <LinearGradientBrush x:Key="ThemeCard" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#252527" Offset="0"/>
        <GradientStop Color="#1A1A1C" Offset="1"/>
    </LinearGradientBrush>
    
    <SolidColorBrush x:Key="ThemeCardBorder" Color="Transparent"/>
    <SolidColorBrush x:Key="ThemeAccent" Color="{StaticResource NeuAccent}"/>
    <SolidColorBrush x:Key="ThemeText" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ThemeTextMuted" Color="#8E8E93"/>
    
    <!-- Effects - Soft shadows for neumorphism -->
    <DropShadowEffect x:Key="GlassGlow" 
                      Color="{StaticResource NeuAccent}" 
                      BlurRadius="15" 
                      ShadowDepth="0" 
                      Opacity="0.5"/>
    
    <!-- Outer shadow (dark) -->
    <DropShadowEffect x:Key="CardShadow" 
                      Color="#0A0A0B" 
                      BlurRadius="20" 
                      ShadowDepth="8" 
                      Opacity="0.6"/>

</ResourceDictionary>
