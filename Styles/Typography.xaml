<!-- ════════════════════════════════════════════════════════════════════ -->
<!-- Typography.xaml - Font styles and text formatting                   -->
<!-- ════════════════════════════════════════════════════════════════════ -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Merge Brushes -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- HEADINGS                                                         -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Style x:Key="Heading1" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="Heading2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="Heading3" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- BODY TEXT                                                        -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Style x:Key="BodyText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="BodyTextSecondary" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <Style x:Key="BodyTextMuted" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- SMALL TEXT                                                       -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Style x:Key="SmallText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <Style x:Key="SmallTextMuted" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- MONOSPACE (Console, Chat, Code)                                  -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Style x:Key="MonospaceText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- LABELS                                                           -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Style x:Key="LabelText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

</ResourceDictionary>
