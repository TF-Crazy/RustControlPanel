<UserControl x:Class="RustControlPanel.Views.Components.ServerBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource SecondaryDark}">
    <StackPanel Orientation="Horizontal" Margin="15,10">
        <TextBlock Text="SERVER" Foreground="{StaticResource TextDim}" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>

        <ComboBox ItemsSource="{Binding Servers}" 
                  SelectedItem="{Binding SelectedServer}" 
                  DisplayMemberPath="Name"
                  Width="220" Height="28"/>

        <Button Content="CONNECT" Command="{Binding ConnectCommand}" 
                Style="{StaticResource ModernButton}" Margin="15,0,0,0"/>

        <Button Content="DEBUG" Click="OpenDebug_Click" 
                Style="{StaticResource ModernButton}" Margin="10,0,0,0" Background="#222" BorderBrush="#444"/>
    </StackPanel>
</UserControl>