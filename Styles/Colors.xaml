<!-- ════════════════════════════════════════════════════════════════════ -->
<!-- Colors.xaml - Palette de couleurs Rust Control Panel               -->
<!-- ════════════════════════════════════════════════════════════════════ -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- BACKGROUNDS                                                      -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Color x:Key="BackgroundDarkColor">#1A1A1A</Color>
    <Color x:Key="BackgroundMediumColor">#252526</Color>
    <Color x:Key="BackgroundLightColor">#2D2D30</Color>
    <Color x:Key="BackgroundLighterColor">#3C3C3C</Color>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- TEXT                                                             -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Color x:Key="TextPrimaryColor">#E0E0E0</Color>
    <Color x:Key="TextSecondaryColor">#A0A0A0</Color>
    <Color x:Key="TextMutedColor">#6B6B6B</Color>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- ACCENTS                                                          -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Color x:Key="AccentBlueColor">#3B82F6</Color>
    <Color x:Key="AccentGreenColor">#10B981</Color>
    <Color x:Key="AccentOrangeColor">#FB923C</Color>
    <Color x:Key="AccentRedColor">#EF4444</Color>
    <Color x:Key="AccentPurpleColor">#8B5CF6</Color>
    <Color x:Key="AccentCyanColor">#06B6D4</Color>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- BORDERS                                                          -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Color x:Key="BorderNormalColor">#3F3F46</Color>
    <Color x:Key="BorderFocusedColor">#3B82F6</Color>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- STATUS COLORS (for converters)                                   -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Color x:Key="StatusOnlineColor">#10B981</Color>
    <Color x:Key="StatusSleepingColor">#FB923C</Color>
    <Color x:Key="StatusDeadColor">#EF4444</Color>
    <Color x:Key="StatusSelectedColor">#3B82F6</Color>

</ResourceDictionary>
