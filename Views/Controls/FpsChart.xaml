<!-- FpsChart.xaml - FPS chart control                                   -->
<!-- ════════════════════════════════════════════════════════════════════ -->

<UserControl x:Class="RustControlPanel.Views.Controls.FpsChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundMediumBrush}"
             Height="200">
    
    <Border BorderBrush="{StaticResource BorderNormalBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8">
        <Canvas x:Name="ChartCanvas"/>
    </Border>
    
</UserControl>
