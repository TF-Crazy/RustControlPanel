<!-- MapControlsPanel.xaml - Map zoom and view controls                  -->
<!-- ════════════════════════════════════════════════════════════════════ -->

<UserControl x:Class="RustControlPanel.Views.Components.MapControlsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="{DynamicResource ThemeCard}"
            BorderBrush="{DynamicResource ThemeCardBorder}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="8"
            Effect="{DynamicResource CardShadowInner}">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            
            <!-- Zoom Out -->
            <Button Content="−" 
                    Command="{Binding ZoomOutCommand}"
                    Width="32" Height="32"
                    Margin="0,0,4,0"
                    Background="{DynamicResource ThemeBackground}"
                    Foreground="{DynamicResource ThemeText}"
                    BorderBrush="{DynamicResource ThemeCardBorder}"
                    BorderThickness="1"
                    FontSize="16"
                    FontWeight="Bold"
                    Cursor="Hand"
                    ToolTip="Zoom arrière">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Zoom Level Display -->
            <Border Background="{DynamicResource ThemeBackground}"
                    BorderBrush="{DynamicResource ThemeCardBorder}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12,6"
                    Margin="0,0,4,0">
                <TextBlock FontSize="12"
                           Foreground="{DynamicResource ThemeText}">
                    <Run Text="{Binding ZoomLevel, StringFormat='{}{0:P0}', Mode=OneWay}"/>
                </TextBlock>
            </Border>

            <!-- Zoom In -->
            <Button Content="+" 
                    Command="{Binding ZoomInCommand}"
                    Width="32" Height="32"
                    Margin="0,0,4,0"
                    Background="{DynamicResource ThemeBackground}"
                    Foreground="{DynamicResource ThemeText}"
                    BorderBrush="{DynamicResource ThemeCardBorder}"
                    BorderThickness="1"
                    FontSize="16"
                    FontWeight="Bold"
                    Cursor="Hand"
                    ToolTip="Zoom avant">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Reset View -->
            <Button Content="Reset" 
                    Command="{Binding ResetViewCommand}"
                    Height="32"
                    Padding="12,6"
                    Background="{DynamicResource ThemeBackground}"
                    Foreground="{DynamicResource ThemeText}"
                    BorderBrush="{DynamicResource ThemeCardBorder}"
                    BorderThickness="1"
                    FontSize="11"
                    Cursor="Hand"
                    ToolTip="Réinitialiser la vue">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
