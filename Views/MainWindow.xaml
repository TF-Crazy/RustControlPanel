<Window x:Class="RustControlPanel.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:RustControlPanel.Views.Components"
        Title="Rust Control Panel - Administration" Height="600" Width="1000"
        Background="{StaticResource PrimaryDarkBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <components:ServerBar Grid.Row="0" VerticalAlignment="Top"/>

        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="5">
            <TabItem Header="CONSOLE">
                <Grid Background="#121212">
                    <TextBlock Text="Flux Console en attente..." Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
            <TabItem Header="JOUEURS">
                <Grid Background="#121212">
                    <TextBlock Text="Liste des joueurs vide." Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
            <TabItem Header="MAP">
                <Grid Background="#121212">
                    <TextBlock Text="Map non chargée." Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>