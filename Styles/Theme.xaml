<!-- ════════════════════════════════════════════════════════════════════ -->
<!-- Theme.xaml - Premium Dark Theme (Final)                             -->
<!-- ════════════════════════════════════════════════════════════════════ -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- BASE COLORS                                                        -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Color x:Key="BaseBlack">#0D1117</Color>
    <Color x:Key="BaseDark">#161B22</Color>
    <Color x:Key="BaseCard">#1C2128</Color>
    <Color x:Key="BaseElevated">#21262D</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="Blue400">#60A5FA</Color>
    <Color x:Key="Blue500">#3B82F6</Color>
    <Color x:Key="Blue600">#2563EB</Color>
    <Color x:Key="Purple500">#8B5CF6</Color>
    <Color x:Key="Purple600">#7C3AED</Color>
    <Color x:Key="Teal500">#14B8A6</Color>
    <Color x:Key="Green500">#10B981</Color>
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- BACKGROUND BRUSHES                                                 -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="ThemeBackground" Color="{StaticResource BaseBlack}"/>
    
    <!-- TitleBar with subtle depth -->
    <LinearGradientBrush x:Key="ThemeTitleBar" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1F242C" Offset="0"/>
        <GradientStop Color="#1A1F26" Offset="0.5"/>
        <GradientStop Color="#161B22" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- TopBar with enhanced depth -->
    <LinearGradientBrush x:Key="ThemeTopBar" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#252C35" Offset="0"/>
        <GradientStop Color="#1F2630" Offset="0.4"/>
        <GradientStop Color="#1C2128" Offset="0.7"/>
        <GradientStop Color="#181D24" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Cards with rich gradient -->
    <LinearGradientBrush x:Key="ThemeCard" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#282F39" Offset="0"/>
        <GradientStop Color="#1F252E" Offset="0.5"/>
        <GradientStop Color="#232930" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Card hover state -->
    <LinearGradientBrush x:Key="ThemeCardHover" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2F3641" Offset="0"/>
        <GradientStop Color="#252C35" Offset="0.5"/>
        <GradientStop Color="#2A313A" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- BORDER BRUSHES                                                     -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <!-- Subtle border -->
    <SolidColorBrush x:Key="ThemeCardBorder" Color="#30363D"/>
    
    <!-- Accent border (blue gradient) -->
    <LinearGradientBrush x:Key="ThemeBorderAccent" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#3B82F6" Offset="0"/>
        <GradientStop Color="#6366F1" Offset="0.5"/>
        <GradientStop Color="#8B5CF6" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Teal border for success/positive -->
    <SolidColorBrush x:Key="ThemeBorderSuccess" Color="#14B8A6"/>
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- ACCENT BRUSHES                                                     -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <!-- Primary accent (blue to purple gradient) -->
    <LinearGradientBrush x:Key="ThemeAccent" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#3B82F6" Offset="0"/>
        <GradientStop Color="#6366F1" Offset="0.5"/>
        <GradientStop Color="#8B5CF6" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Accent solid (for simpler elements) -->
    <SolidColorBrush x:Key="ThemeAccentSolid" Color="#3B82F6"/>
    
    <!-- Success accent (green) -->
    <SolidColorBrush x:Key="ThemeAccentSuccess" Color="#10B981"/>
    
    <!-- Warning accent (teal) -->
    <SolidColorBrush x:Key="ThemeAccentWarning" Color="#14B8A6"/>
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- TEXT BRUSHES                                                       -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="ThemeText" Color="#E6EDF3"/>
    <SolidColorBrush x:Key="ThemeTextSecondary" Color="#B1BAC4"/>
    <SolidColorBrush x:Key="ThemeTextMuted" Color="#7D8590"/>
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- EFFECTS                                                            -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <!-- Soft blue glow for interactive elements -->
    <DropShadowEffect x:Key="GlassGlow" 
                      Color="#3B82F6" 
                      BlurRadius="24" 
                      ShadowDepth="0" 
                      Opacity="0.5"/>
    
    <!-- Intense glow for emphasis -->
    <DropShadowEffect x:Key="IntenseGlow" 
                      Color="#6366F1" 
                      BlurRadius="32" 
                      ShadowDepth="0" 
                      Opacity="0.7"/>
    
    <!-- Multi-layer shadow for depth -->
    <DropShadowEffect x:Key="CardShadow" 
                      Color="#000000" 
                      BlurRadius="32" 
                      ShadowDepth="10" 
                      Opacity="0.7"/>
    
    <!-- Subtle inner glow -->
    <DropShadowEffect x:Key="InnerGlow" 
                      Color="#3B82F6" 
                      BlurRadius="12" 
                      ShadowDepth="0" 
                      Opacity="0.15" 
                      Direction="0"/>
    
    <!-- Success glow (green) -->
    <DropShadowEffect x:Key="SuccessGlow" 
                      Color="#10B981" 
                      BlurRadius="20" 
                      ShadowDepth="0" 
                      Opacity="0.6"/>

</ResourceDictionary>
