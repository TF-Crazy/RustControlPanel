<UserControl x:Class="RustControlPanel.Views.Components.ServerBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource SecondaryDark}">
    <StackPanel Orientation="Horizontal" Margin="10,5">
        <TextBox Text="{Binding ServerIp}" Width="120" Margin="0,0,5,0" Tag="IP:"/>
        <TextBox Text="{Binding ServerPort}" Width="60" Margin="0,0,5,0" Tag="Port:"/>
        <PasswordBox x:Name="PwBox" Width="100" Margin="0,0,10,0" />

        <ComboBox ItemsSource="{Binding Servers}" SelectedItem="{Binding SelectedServer}" Width="30" Margin="0,0,10,0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Content="Connecter" Command="{Binding ConnectCommand}" Style="{StaticResource ModernButton}" Background="#00B16A"/>
        <Button Content="Déconnecter" Command="{Binding DisconnectCommand}" Style="{StaticResource ModernButton}" Background="#CF3A24" Margin="5,0"/>

        <StackPanel Orientation="Horizontal" Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="{Binding PlayerCount}" Foreground="#00B16A" Margin="10,0"/>
            <TextBlock Text="{Binding ServerFps}" Foreground="Gray"/>
        </StackPanel>
    </StackPanel>
</UserControl>