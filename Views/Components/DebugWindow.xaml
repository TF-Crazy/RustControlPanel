<Window x:Class="RustControlPanel.Views.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console Debug" Height="400" Width="600" Background="#1E1E1E">
    <ListBox ItemsSource="{Binding Entries}" Background="Transparent" BorderThickness="0">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" Foreground="Gray" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding Level}" Foreground="Orange" Width="50"/>
                    <TextBlock Text="{Binding Message}" Foreground="White"/>
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</Window>