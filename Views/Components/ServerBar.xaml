<UserControl x:Class="RustControlPanel.Views.Components.ServerBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Blue" Height="60">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
        <TextBlock Text="TEST SERVEUR:" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>

        <Button Content="CONNEXION TEST" Width="120" Height="30"/>

        <TextBlock Text="{Binding ConnectionStatus}" Foreground="Yellow" Margin="20,0,0,0"/>
    </StackPanel>
</UserControl>