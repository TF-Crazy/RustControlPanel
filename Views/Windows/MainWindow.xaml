<!-- MainWindow.xaml - Main window with integrated debug panel           -->
<!-- ════════════════════════════════════════════════════════════════════ -->

<Window x:Class="RustControlPanel.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RustControlPanel.ViewModels"
        xmlns:components="clr-namespace:RustControlPanel.Views.Components"
        Title="Rust Control Panel" 
        Height="720" Width="1280"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Border Background="{DynamicResource ThemeBackground}"
            CornerRadius="8"
            Effect="{DynamicResource CardShadowOuter}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>     <!-- TitleBar -->
                <RowDefinition Height="Auto"/>   <!-- TopBar -->
                <RowDefinition Height="*"/>      <!-- Content -->
                <RowDefinition Height="28"/>     <!-- Footer -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Sidebar -->
                <ColumnDefinition Width="*"/>    <!-- Main Content -->
            </Grid.ColumnDefinitions>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- TITLEBAR                                                         -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Border Grid.Row="0" Grid.ColumnSpan="2"
                    Background="{DynamicResource ThemeTitleBar}"
                    CornerRadius="8,8,0,0"
                    BorderBrush="{DynamicResource ThemeCardBorder}"
                    BorderThickness="0,0,0,1"
                    MouseLeftButtonDown="OnTitleBarMouseDown">
                <Grid Margin="12,0">
                    <!-- Server name (centered) -->
                    <TextBlock Text="{Binding ServerName, FallbackValue=Rust Control Panel}"
                               Foreground="{DynamicResource ThemeText}"
                               FontSize="13"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <!-- Window controls (right) -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="―" 
                                Click="OnMinimizeClick"
                                Width="36" Height="32"
                                FontSize="14"
                                Style="{StaticResource TitleBarButton}"
                                Foreground="{DynamicResource ThemeTextMuted}"/>
                        <Button x:Name="MaximizeButton"
                                Content="☐" 
                                Click="OnMaximizeClick"
                                Width="36" Height="32"
                                FontSize="14"
                                Style="{StaticResource TitleBarButton}"
                                Foreground="{DynamicResource ThemeTextMuted}"/>
                        <Button Content="✕" 
                                Click="OnCloseClick"
                                Width="36" Height="32"
                                FontSize="14"
                                Style="{StaticResource TitleBarButton}"
                                Foreground="{DynamicResource ThemeTextMuted}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- SIDEBAR                                                          -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <components:Sidebar x:Name="Sidebar"
                                Grid.Row="1" Grid.RowSpan="3"
                                Grid.Column="0"
                                MapClicked="OnMapClicked"
                                StatsClicked="OnStatsClicked"
                                PlayersClicked="OnPlayersClicked"
                                ConsoleClicked="OnConsoleClicked"/>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- TOPBAR                                                           -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <components:TopBar Grid.Row="1" Grid.Column="1"/>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- MAIN CONTENT AREA                                                -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Page Content -->
                <ContentControl x:Name="PageContent"
                                Grid.Row="0"
                                Background="{DynamicResource ThemeBackground}"/>

                <!-- ═══════════════════════════════════════════════════════════ -->
                <!-- DEBUG PANEL (slide from bottom)                             -->
                <!-- ═══════════════════════════════════════════════════════════ -->
                <Border x:Name="DebugPanel"
        Grid.Row="1"
        Background="{DynamicResource ThemeCard}"
        BorderBrush="{DynamicResource ThemeCardBorder}"
        BorderThickness="0,1,0,0"
        Height="0"
        VerticalAlignment="Bottom">
                    <Grid Margin="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <TextBlock Text="Debug Logs"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource ThemeText}"
                       VerticalAlignment="Center"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Clear"
                        Click="OnClearDebugClick"
                        Padding="8,4"
                        FontSize="11"
                        Background="Transparent"
                        BorderBrush="{DynamicResource ThemeCardBorder}"
                        BorderThickness="1"
                        Foreground="{DynamicResource ThemeTextMuted}"
                        Cursor="Hand"
                        Margin="0,0,8,0"/>

                <Button Content="✕"
                        Click="OnCloseDebugClick"
                        Width="24" Height="24"
                        FontSize="12"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{DynamicResource ThemeTextMuted}"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>

                        <!-- Filter Tabs -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                            <Border x:Name="FilterAll" 
                    Background="#2800D9FF"
                    BorderBrush="#00D9FF"
                    BorderThickness="0,0,0,2"
                    Padding="12,4"
                    Margin="0,0,8,0"
                    Cursor="Hand"
                    MouseLeftButtonDown="OnFilterAllClick">
                                <TextBlock Text="All" FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource ThemeText}"/>
                            </Border>

                            <Border x:Name="FilterDebug"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0,0,0,2"
                    Padding="12,4"
                    Margin="0,0,8,0"
                    Cursor="Hand"
                    MouseLeftButtonDown="OnFilterDebugClick">
                                <TextBlock Text="Debug" FontSize="11" Foreground="{DynamicResource ThemeTextMuted}"/>
                            </Border>

                            <Border x:Name="FilterInfo"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0,0,0,2"
                    Padding="12,4"
                    Margin="0,0,8,0"
                    Cursor="Hand"
                    MouseLeftButtonDown="OnFilterInfoClick">
                                <TextBlock Text="Info" FontSize="11" Foreground="{DynamicResource ThemeTextMuted}"/>
                            </Border>

                            <Border x:Name="FilterWarning"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0,0,0,2"
                    Padding="12,4"
                    Margin="0,0,8,0"
                    Cursor="Hand"
                    MouseLeftButtonDown="OnFilterWarningClick">
                                <TextBlock Text="Warning" FontSize="11" Foreground="{DynamicResource ThemeTextMuted}"/>
                            </Border>

                            <Border x:Name="FilterError"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0,0,0,2"
                    Padding="12,4"
                    Cursor="Hand"
                    MouseLeftButtonDown="OnFilterErrorClick">
                                <TextBlock Text="Error" FontSize="11" Foreground="{DynamicResource ThemeTextMuted}"/>
                            </Border>
                        </StackPanel>

                        <!-- Debug Content - RichTextBox pour couleurs + sélection -->
                        <ScrollViewer x:Name="DebugScrollViewer"
                      Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
                            <RichTextBox x:Name="DebugTextBox"
                         IsReadOnly="True"
                         Background="Transparent"
                         BorderThickness="0"
                         FontSize="11"
                         Foreground="{DynamicResource ThemeTextSecondary}"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- FOOTER STATUS BAR                                                -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Border Grid.Row="3" Grid.Column="1"
                    Background="{DynamicResource ThemeTitleBar}"
                    BorderBrush="{DynamicResource ThemeCardBorder}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,8,0">
                <Grid Margin="12,0">
                    <StackPanel Orientation="Horizontal">
                        <!-- Status indicator -->
                        <Ellipse Width="8" Height="8"
                                 Margin="0,0,8,0"
                                 VerticalAlignment="Center">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="{DynamicResource ThemeAccentSuccess}"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#10B981" BlurRadius="8" ShadowDepth="0"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                            <Setter Property="Fill" Value="{DynamicResource ThemeAccentDanger}"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#EF4444" BlurRadius="8" ShadowDepth="0"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>

                        <!-- Status text -->
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="11">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Connected"/>
                                    <Setter Property="Foreground" Value="{DynamicResource ThemeAccentSuccess}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                            <Setter Property="Text" Value="Disconnected"/>
                                            <Setter Property="Foreground" Value="{DynamicResource ThemeAccentDanger}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <!-- Version -->
                    <TextBlock Text="v1.0.0"
                               FontSize="11"
                               Foreground="{DynamicResource ThemeTextMuted}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- CONNECTION LOST OVERLAY (hidden by default)                      -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Border x:Name="ConnectionOverlay"
                    Grid.RowSpan="4" Grid.ColumnSpan="2"
                    Background="#DD000000"
                    Visibility="Collapsed"
                    Panel.ZIndex="999">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="⚠️" 
                               FontSize="48"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource ThemeAccentWarning}"
                               Margin="0,0,0,16"/>
                    
                    <TextBlock Text="Connection Lost" 
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{DynamicResource ThemeText}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    
                    <TextBlock HorizontalAlignment="Center"
                               Foreground="{DynamicResource ThemeTextMuted}"
                               FontSize="13">
                        <Run Text="Reconnecting in"/>
                        <Run Text="{Binding ReconnectCountdown, FallbackValue=5}" 
                             Foreground="{DynamicResource ThemeAccent}"
                             FontWeight="SemiBold"/>
                        <Run Text="seconds..."/>
                    </TextBlock>
                    
                    <Button Content="Reconnect Now"
                            Command="{Binding ReconnectCommand}"
                            Margin="0,24,0,0"
                            Padding="16,10"
                            Background="{DynamicResource ThemeAccent}"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Effect="{DynamicResource GlassGlow}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Effect="{TemplateBinding Effect}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"
                                                                  Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>    
</Window>
