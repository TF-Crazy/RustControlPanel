<!-- TopBar.xaml - V3 COMPLET avec hover                                 -->
<!-- ════════════════════════════════════════════════════════════════════ -->

<UserControl x:Class="RustControlPanel.Views.Components.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:RustControlPanel.Views.Controls">

    <Border Height="56"
            Background="{DynamicResource ThemeTopBar}"
            BorderBrush="{DynamicResource ThemeCardBorder}"
            BorderThickness="0,0,0,1">
        <Grid Margin="16,0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal">
                    
                    <!-- Players -->
                    <Border Width="90" Height="40" Margin="0,0,8,0"
                            Background="{DynamicResource ThemeCard}"
                            BorderBrush="{DynamicResource ThemeCardBorder}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Effect="{DynamicResource GlassGlow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Viewbox Grid.Column="0" Width="14" Height="14" Margin="10,0,6,0">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M17,21 L17,19 Q17,16 14,16 L10,16 Q7,16 7,19 L7,21 M12,12 Q9,12 9,9 Q9,6 12,6 Q15,6 15,9 Q15,12 12,12"
                                          Stroke="#00D9FF"
                                          StrokeThickness="1.5"
                                          Opacity="0.9"/>
                                </Canvas>
                            </Viewbox>

                            <TextBlock Grid.Column="1"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource ThemeText}"
                                       VerticalAlignment="Center">
                                <Run Text="{Binding PlayerCount, FallbackValue=0}"/><Run Text="/" Foreground="{DynamicResource ThemeTextMuted}"/><Run Text="{Binding MaxPlayers, FallbackValue=50}" Foreground="{DynamicResource ThemeTextMuted}"/>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- Queue -->
                    <Border Width="80" Height="40" Margin="0,0,8,0"
                            Background="{DynamicResource ThemeCard}"
                            BorderBrush="{DynamicResource ThemeCardBorder}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Effect="{DynamicResource GlassGlow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Viewbox Grid.Column="0" Width="14" Height="14" Margin="10,0,6,0">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M12,2 L12,6 M12,18 L12,22 M4.93,4.93 L7.76,7.76 M16.24,16.24 L19.07,19.07 M2,12 L6,12 M18,12 L22,12 M4.93,19.07 L7.76,16.24 M16.24,7.76 L19.07,4.93"
                                          Stroke="#F59E0B"
                                          StrokeThickness="1.5"
                                          Opacity="0.9"/>
                                </Canvas>
                            </Viewbox>

                            <TextBlock Grid.Column="1"
                                       Text="{Binding QueueCount, FallbackValue=0}"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource ThemeText}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Joining -->
                    <Border Width="80" Height="40" Margin="0,0,8,0"
                            Background="{DynamicResource ThemeCard}"
                            BorderBrush="{DynamicResource ThemeCardBorder}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Effect="{DynamicResource GlassGlow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Viewbox Grid.Column="0" Width="14" Height="14" Margin="10,0,6,0">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M22,12 L18,12 M6,12 L2,12 M12,6 L12,2 M12,22 L12,18 M17,7 L20,4 M4,20 L7,17 M17,17 L20,20 M4,4 L7,7"
                                          Stroke="#10B981"
                                          StrokeThickness="1.5"
                                          Opacity="0.9"/>
                                </Canvas>
                            </Viewbox>

                            <TextBlock Grid.Column="1"
                                       Text="{Binding JoiningCount, FallbackValue=0}"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource ThemeText}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- FPS -->
                    <Border Width="75" Height="40" Margin="0,0,8,0"
                            Background="{DynamicResource ThemeCard}"
                            BorderBrush="{DynamicResource ThemeCardBorder}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Effect="{DynamicResource GlassGlow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Viewbox Grid.Column="0" Width="14" Height="14" Margin="10,0,6,0">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M13,2 L3,14 L12,14 L11,22 L21,10 L12,10 Z"
                                          Stroke="#10B981"
                                          StrokeThickness="1.5"
                                          Opacity="0.9"/>
                                </Canvas>
                            </Viewbox>

                            <TextBlock Grid.Column="1"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource ThemeText}"
                                       VerticalAlignment="Center">
                                <Run Text="{Binding ServerFps, StringFormat={}{0:F0}, FallbackValue=60}"/><Run Text=" FPS" FontSize="11" Foreground="{DynamicResource ThemeTextMuted}"/>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- FPS Chart -->
                    <Border Width="280" Height="40" Margin="0,0,8,0"
                            Background="{DynamicResource ThemeCard}"
                            BorderBrush="{DynamicResource ThemeCardBorder}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Effect="{DynamicResource GlassGlow}">
                        <controls:FpsChart x:Name="FpsChartControl"/>
                    </Border>

                    <!-- Entity Time -->
                    <Border Width="80" Height="40" Margin="0,0,8,0"
                            Background="{DynamicResource ThemeCard}"
                            BorderBrush="{DynamicResource ThemeCardBorder}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Effect="{DynamicResource GlassGlow}">
                        <StackPanel VerticalAlignment="Center" Margin="10,0">
                            <TextBlock Text="ENTITY"
                                       FontSize="9"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource ThemeTextMuted}"/>
                            <TextBlock FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource ThemeText}">
                                <Run Text="{Binding EntityTime, StringFormat={}{0:F1}, FallbackValue=0.0}"/><Run Text="ms" FontSize="10" Foreground="{DynamicResource ThemeTextMuted}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Game Time -->
                    <Border Width="80" Height="40" Margin="0,0,8,0"
                            Background="{DynamicResource ThemeCard}"
                            BorderBrush="{DynamicResource ThemeCardBorder}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Effect="{DynamicResource GlassGlow}">
                        <StackPanel VerticalAlignment="Center" Margin="10,0">
                            <TextBlock Text="GAME"
                                       FontSize="9"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource ThemeTextMuted}"/>
                            <TextBlock Text="{Binding GameTime, FallbackValue=00:00}"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource ThemeText}"/>
                        </StackPanel>
                    </Border>

                    <!-- Uptime -->
                    <Border Width="100" Height="40" Margin="0,0,8,0"
                            Background="{DynamicResource ThemeCard}"
                            BorderBrush="{DynamicResource ThemeCardBorder}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Effect="{DynamicResource GlassGlow}">
                        <StackPanel VerticalAlignment="Center" Margin="10,0">
                            <TextBlock Text="UPTIME"
                                       FontSize="9"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource ThemeTextMuted}"/>
                            <TextBlock Text="{Binding Uptime, FallbackValue=0d 0h 0m}"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource ThemeText}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                
                <!-- Debug Toggle -->
                <Button Command="{Binding ToggleDebugCommand}"
                        Width="32" Height="32"
                        Margin="0,0,8,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Viewbox Width="16" Height="16">
                        <Canvas Width="24" Height="24">
                            <Path Data="M12,2 L15.09,8.26 L22,9.27 L17,14.14 L18.18,21.02 L12,17.77 L5.82,21.02 L7,14.14 L2,9.27 L8.91,8.26 Z"
                                  Stroke="{DynamicResource ThemeTextMuted}"
                                  StrokeThickness="1.5"
                                  Opacity="0.9"/>
                        </Canvas>
                    </Viewbox>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#20FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Disconnect -->
                <Button Command="{Binding DisconnectCommand}"
                        Width="32" Height="32"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Viewbox Width="16" Height="16">
                        <Canvas Width="24" Height="24">
                            <Path Data="M9,21 L5,21 Q3,21 3,19 L3,5 Q3,3 5,3 L9,3 M16,17 L21,12 L16,7 M21,12 L9,12"
                                  Stroke="#EF4444"
                                  StrokeThickness="1.5"
                                  Opacity="0.9"/>
                        </Canvas>
                    </Viewbox>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#30EF4444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
    
</UserControl>
