<Window x:Class="RustControlPanel.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:RustControlPanel.Views.Components"
        Title="Rust Control Panel - Administration" Height="600" Width="1000"
        Background="{StaticResource PrimaryDarkBrush}">

    <DockPanel>
        <Border DockPanel.Dock="Top" Height="60" Background="Red">
            <components:ServerBar />
        </Border>

        <TabControl Background="#151515">
            <TabItem Header="CONSOLE">
                <TextBlock Text="Flux console en attente..." Foreground="White"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>