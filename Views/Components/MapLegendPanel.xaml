<!-- MapLegendPanel.xaml - Map entity legend                             -->
<!-- ════════════════════════════════════════════════════════════════════ -->

<UserControl x:Class="RustControlPanel.Views.Components.MapLegendPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="{DynamicResource ThemeCard}"
            BorderBrush="{DynamicResource ThemeCardBorder}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="10"
            Effect="{DynamicResource CardShadowInner}">
        <StackPanel>
            <!-- Title -->
            <TextBlock Text="Légende" 
                       FontSize="11"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource ThemeText}"
                       Margin="0,0,0,8"/>

            <!-- Online Player -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <Ellipse Width="8" Height="8" 
                         Fill="#10B981"
                         Margin="0,0,6,0"/>
                <TextBlock Text="En ligne" 
                           FontSize="10"
                           Foreground="{DynamicResource ThemeText}"/>
            </StackPanel>

            <!-- Sleeping Player -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <Ellipse Width="8" Height="8" 
                         Fill="#FB9238"
                         Margin="0,0,6,0"/>
                <TextBlock Text="Dormeur" 
                           FontSize="10"
                           Foreground="{DynamicResource ThemeText}"/>
            </StackPanel>

            <!-- Dead Player -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <Ellipse Width="8" Height="8" 
                         Fill="#EF4444"
                         Margin="0,0,6,0"/>
                <TextBlock Text="Mort" 
                           FontSize="10"
                           Foreground="{DynamicResource ThemeText}"/>
            </StackPanel>

            <!-- Selected Player -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <Ellipse Width="8" Height="8" 
                         Fill="#3B82F6"
                         Margin="0,0,6,0"/>
                <TextBlock Text="Sélectionné" 
                           FontSize="10"
                           Foreground="{DynamicResource ThemeText}"/>
            </StackPanel>

            <!-- Teammate -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <Ellipse Width="8" Height="8" 
                         Fill="#10B981"
                         Stroke="#8B5CF6"
                         StrokeThickness="2"
                         Margin="0,0,6,0"/>
                <TextBlock Text="Teammate" 
                           FontSize="10"
                           Foreground="{DynamicResource ThemeText}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
