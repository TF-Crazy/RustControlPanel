<!-- PlayerListPanel.xaml - Player list with search and sort              -->
<!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

<UserControl x:Class="RustControlPanel.Views.Components.PlayerListPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="{DynamicResource ThemeCard}"
            BorderBrush="{DynamicResource ThemeCardBorder}"
            BorderThickness="1"
            CornerRadius="8"
            Effect="{DynamicResource CardShadowInner}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="*"/>     <!-- Liste -->
            </Grid.RowDefinitions>

            <!-- â•â•â•â•â•â• HEADER â•â•â•â•â•â• -->
            <Border Grid.Row="0"
                    Background="{DynamicResource ThemeTitleBar}"
                    BorderBrush="{DynamicResource ThemeCardBorder}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="8,8,0,0"
                    Padding="12,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Titre + Badges -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Joueurs" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"
                                   Foreground="{DynamicResource ThemeText}"/>
                        
                        <!-- Badge Online (Vert) -->
                        <Border Background="{DynamicResource ThemeAccentSuccess}" 
                                CornerRadius="10" 
                                Padding="8,2" 
                                Margin="10,0,4,0"
                                ToolTip="Joueurs en ligne">
                            <TextBlock Text="{Binding ActivePlayersCount, FallbackValue='0'}" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                        
                        <!-- Badge Sleeping (Orange) -->
                        <Border Background="{DynamicResource ThemeAccentWarning}" 
                                CornerRadius="10" 
                                Padding="8,2" 
                                Margin="0,0,0,0"
                                ToolTip="Joueurs dormeurs">
                            <TextBlock Text="{Binding SleepingPlayersCount, FallbackValue='0'}" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <!-- Recherche -->
                    <Grid Grid.Row="1" Margin="0,0,0,8">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{DynamicResource ThemeBackground}"
                                 Foreground="{DynamicResource ThemeText}"
                                 BorderBrush="{DynamicResource ThemeCardBorder}"
                                 BorderThickness="1"
                                 Padding="30,8,10,8"
                                 CornerRadius="4"
                                 FontSize="12"/>
                        <TextBlock Text="ðŸ”" 
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   Foreground="{DynamicResource ThemeTextMuted}"/>
                        <TextBlock Text="Rechercher..."
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"
                                   Margin="32,0,0,0"
                                   FontSize="12"
                                   Foreground="{DynamicResource ThemeTextMuted}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SearchText}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Tri -->
                    <ComboBox Grid.Row="2" 
                              SelectedIndex="{Binding SortMode}"
                              Background="{DynamicResource ThemeBackground}"
                              Foreground="{DynamicResource ThemeText}"
                              BorderBrush="{DynamicResource ThemeCardBorder}"
                              BorderThickness="1"
                              Padding="8,6"
                              FontSize="11">
                        <ComboBoxItem Content="ðŸ“‹ Par nom"/>
                        <ComboBoxItem Content="ðŸ’š Par santÃ©"/>
                        <ComboBoxItem Content="ðŸŸ¢ En ligne d'abord"/>
                        <ComboBoxItem Content="ðŸ“¶ Par ping"/>
                        <ComboBoxItem Content="ðŸ‘¥ Par team"/>
                    </ComboBox>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â• LISTE JOUEURS â•â•â•â•â•â• -->
            <ListBox Grid.Row="1"
                     ItemsSource="{Binding FilteredPlayers}"
                     SelectedItem="{Binding SelectedPlayer}"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="4"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="4,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>  <!-- Status dot -->
                                <ColumnDefinition Width="*"/>     <!-- Name + Team -->
                                <ColumnDefinition Width="Auto"/>  <!-- Health/Ping -->
                            </Grid.ColumnDefinitions>

                            <!-- Status Dot -->
                            <Ellipse Grid.Column="0" 
                                     Width="8" Height="8" 
                                     Margin="0,0,8,0"
                                     VerticalAlignment="Center">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{DynamicResource ThemeAccentSuccess}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                                <Setter Property="Fill" Value="{DynamicResource ThemeAccentWarning}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsDead}" Value="True">
                                                <Setter Property="Fill" Value="{DynamicResource ThemeAccentDanger}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>

                            <!-- Name + Team Icon -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding DisplayName}" 
                                           FontSize="12"
                                           Foreground="{DynamicResource ThemeText}"/>
                                
                                <!-- Team Icon -->
                                <TextBlock Text="ðŸ‘¥" 
                                           FontSize="11"
                                           Margin="6,0,0,0"
                                           ToolTip="In a team">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasTeam}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <!-- Health/Ping Info -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- Health Bar (pour joueurs online) -->
                                <Grid Width="50" Height="6" 
                                      Margin="0,0,8,0"
                                      VerticalAlignment="Center">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    
                                    <!-- Background -->
                                    <Border Background="#333" CornerRadius="2"/>
                                    
                                    <!-- Foreground (health fill) -->
                                    <Border CornerRadius="2" 
                                            HorizontalAlignment="Left"
                                            Width="{Binding Health, Converter={StaticResource HealthToWidthConverter}}">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding Health, Converter={StaticResource HealthToColorConverter}}"/>
                                        </Border.Background>
                                    </Border>
                                </Grid>

                                <!-- Ping -->
                                <TextBlock Text="{Binding Ping, StringFormat='{}{0}ms'}" 
                                           FontSize="10"
                                           Foreground="{DynamicResource ThemeTextMuted}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Margin" Value="0,1"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ThemeAccent}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
    </Border>
</UserControl>
