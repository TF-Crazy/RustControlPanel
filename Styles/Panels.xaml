<!-- ════════════════════════════════════════════════════════════════════ -->
<!-- Panels.xaml - Panel, Border, Card styles                            -->
<!-- ════════════════════════════════════════════════════════════════════ -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Merge Brushes -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- CARD PANEL                                                       -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Style x:Key="CardPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderNormalBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- SECTION PANEL (with header)                                      -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Style x:Key="SectionPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderNormalBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- HEADER PANEL                                                     -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Style x:Key="HeaderPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderNormalBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- CONTENT PANEL                                                    -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <Style x:Key="ContentPanel" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

</ResourceDictionary>
